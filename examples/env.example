# Copy to .env and fill with your Daraja credentials.
# The SDK reads these when values are not passed in config.
# Never commit .env or real secrets.

# Required for auth (consumerKey + consumerSecret)
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret

# Optional: sandbox | production (default: sandbox)
MPESA_ENVIRONMENT=sandbox

# Optional: used when not passed in config (needed for specific APIs)
MPESA_SHORT_CODE=174379
MPESA_PASS_KEY=your_lipa_na_mpesa_passkey
MPESA_INITIATOR_NAME=your_initiator_name
MPESA_SECURITY_CREDENTIAL=your_encrypted_security_credential
